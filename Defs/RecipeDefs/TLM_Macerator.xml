<RecipeDefs>
    
	<RecipeDef>
		<defName>Mac_IronOre</defName>
		<label>Macerate Iron Ore</label>
		<description>Macerate 2 Iron Ore to Iron dust with byproduct of Sulfur dust</description>
		<jobString>Macerating.</jobString>
		<workAmount>250</workAmount>
		<workEffect>ButcherMechanoid</workEffect>
		<workSpeedStat>MaterialCraftingSpeed</workSpeedStat>
		<efficiencyStat>MaterialCraftingEfficiency</efficiencyStat>
		<sustainerSoundDef>Recipe_CremateCorpse</sustainerSoundDef>
		<ingredients>
			<li>
        		<filter>
          			<thingDefs>
            			<li>Iron_Ore</li>
          			</thingDefs>
        		</filter>
        		<count>2</count>
      		</li>
		</ingredients>
		<products>
				<Iron_Dust>17</Iron_Dust>
				<Sulfur_Dust>3</Sulfur_Dust>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Iron_Ore</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>Iron_Ore</li>
			</thingDefs>
		</defaultIngredientFilter>
		<skillRequirements>
			<li>
				<skill>Crafting</skill>
				<minLevel>2</minLevel>
			</li>
		</skillRequirements>
		<skillGains>
			<li>
				<skill>Crafting</skill>
				<xp>50</xp>
			</li>
		</skillGains>
	</RecipeDef>
	
